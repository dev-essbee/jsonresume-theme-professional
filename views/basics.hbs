{{#resume.basics}}
<section id="basics">
	<h1>{{name}}</h1>
	<div class="contact centered">
		{{#if email}}
		<span class="vertical-separator">{{email}}</span>
		{{/if}}
		{{#if phone}}
		<span class="vertical-separator">{{phone}}</span>
		{{/if}}
		{{#if website}}
		<span class="vertical-separator"><a href="{{website}}">{{website}}</a></span>
		{{/if}}
		{{#if github}}
		<span class="vertical-separator"><a href="{{github}}">{{github}}</a></span>
		{{/if}}
	</div>
	{{#if summary}}
	<div class="summary">
		<p>{{summary}}</p>
	</div>
	{{/if}}
</section>
{{/resume.basics}}