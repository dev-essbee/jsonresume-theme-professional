{{#if resume.projects.length}}
<section id="projects">
    <h2>
        {{#if_eq resume.language 'fr'}}
        {{i18n 'proj' 'fr'}}
        {{else}}
        {{i18n 'proj' 'en'}}
        {{/if_eq}}
    </h2>
    {{#each resume.projects}}
    {{#lt @index 5}}
    {{#> item title=name github=github medium=medium}}
    {{#if description}}
    <ul class="description">
        {{#each description}}
        <li>{{.}}</li>
        {{/each}}
    </ul>
    {{/if}}
    {{/item}}
    {{/lt}}
    {{/each}}
</section>
{{/if}}