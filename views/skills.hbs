{{#if resume.skills.length}}
<section id="skills">
    <h2>
        {{#if_eq resume.language 'fr'}}
        {{i18n 'tech' 'fr'}}
        {{else}}
        {{i18n 'tech' 'en'}}
        {{/if_eq}}
    </h2>
    <ul class="item">
        {{#each resume.skills}}
        <li>
            {{#if name}}
            {{#if keywords.length}}
            <strong>{{name}}</strong>: {{#each keywords}}{{.}}{{#unless @last}},
            {{/unless}}{{/each}}
            {{else}}
            <strong>{{name}}</strong>
            {{/if}}
            {{/if}}
        </li>
        {{/each}}
    </ul>
</section>
{{/if}}