{{#if resume.work.length}}
<section id="work">
	<h2>Relevant Experience</h2>
	{{#each resume.work}}
		{{#if @index < 3}}
			{{#> item title=name subtitle=position location=location startDate=startDate endDate=endDate startDate2=startDate2 endDate2=endDate2}}
			{{#if highlights.length}}
			<ul class="highlights">
				{{#each highlights}}
				<li>{{.}}</li>
				{{/each}}
			</ul>
			{{/if}}
			{{/item}}
		{{/if}}
	{{/each}}
</section>
{{/if}}
